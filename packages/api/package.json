  },
  "devDependencies": {
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/mongodb": "^3.6.16",
    "@types/node": "^15.3.0",
    "@types/ws": "^7.4.4",
    "nodemon": "^2.0.7",
    "ts-loader": "^9.2.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.4",
